# Database
DATABASE_URL="postgresql://username:password@localhost:5432/tutorconnect"
DIRECT_URL="postgresql://username:password@localhost:5432/tutorconnect"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
SUPABASE_JWT_SECRET="your-jwt-secret"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"
JWT_SECRET="your-jwt-secret"

# Email Configuration (for Supabase Auth)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@tutorconnect.no"

# File Upload Configuration
MAX_FILE_SIZE="5242880" # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="TutorConnect"
NEXT_PUBLIC_APP_DESCRIPTION="Norges ledende plattform for privatl√¶ring"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_GTM_ID=""

# Error Monitoring (Optional)
SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_ERROR_MONITORING="false"
NEXT_PUBLIC_ENABLE_CHAT="true"
NEXT_PUBLIC_ENABLE_APPOINTMENTS="true"
NEXT_PUBLIC_ENABLE_DOCUMENT_UPLOAD="true"

# Development Settings
NODE_ENV="development"
NEXT_PUBLIC_NODE_ENV="development"

# Norwegian-specific settings
NEXT_PUBLIC_DEFAULT_LOCALE="no"
NEXT_PUBLIC_SUPPORTED_LOCALES="no,en"
NEXT_PUBLIC_CURRENCY="NOK"
NEXT_PUBLIC_TIMEZONE="Europe/Oslo"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes

# Security
BCRYPT_SALT_ROUNDS="12"
PASSWORD_MIN_LENGTH="8"
SESSION_MAX_AGE="86400" # 24 hours

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_PUSH_NOTIFICATIONS="true"
NOTIFICATION_FROM_EMAIL="notifications@tutorconnect.no"

# Business Logic
DEFAULT_SESSION_DURATION="60" # minutes
MAX_SESSIONS_PER_DAY="10"
BOOKING_ADVANCE_HOURS="2"
CANCELLATION_HOURS="24"

# Logging
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING="true"

# Performance
ENABLE_COMPRESSION="true"
CACHE_TTL="3600" # 1 hour
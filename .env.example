# Database
DATABASE_URL="postgresql://username:password@localhost:5432/tutorconnect"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# JWT Secrets (generate secure random strings)
JWT_ACCESS_SECRET="your-super-secret-jwt-access-token-here-make-it-long-and-random"
JWT_REFRESH_SECRET="your-super-secret-jwt-refresh-token-here-different-from-access"

# App Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-for-production"
NODE_ENV="development"

# Email Service (choose one)
# SendGrid
SENDGRID_API_KEY="your-sendgrid-api-key"
EMAIL_FROM="noreply@tutorconnect.no"

# AWS SES
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-north-1"

# Postmark
POSTMARK_API_KEY="your-postmark-api-key"

# Rate Limiting (Redis - optional)
REDIS_URL="redis://localhost:6379"

# File Upload Configuration
MAX_FILE_SIZE="5242880"  # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# Security
BCRYPT_ROUNDS="12"
SESSION_TIMEOUT="900"  # 15 minutes in seconds
REFRESH_TOKEN_TIMEOUT="604800"  # 7 days in seconds

# Monitoring and Logging
LOG_LEVEL="info"
SENTRY_DSN="your-sentry-dsn-for-error-tracking"

# Development
ANALYZE="false"